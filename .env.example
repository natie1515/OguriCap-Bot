# ==========================================
# CONFIGURACIÓN DEL BOT DE WHATSAPP
# ==========================================

# Configuración básica del bot
BOT_NAME="WhatsApp Bot Panel"
BOT_VERSION="2.0.0"
NODE_ENV="development"

# Puerto del servidor del panel
PANEL_PORT=3001
PANEL_HOST="0.0.0.0"

# URL del panel (para comandos del bot)
PANEL_URL="https://oguricap.ooguy.com"

# Configuración de autenticación del panel
PANEL_API_KEY="your-secure-api-key-here"
PANEL_ADMIN_USER="admin"
PANEL_ADMIN_PASS="admin123"
PANEL_ADMIN_ROLE="owner"

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================

# Configuración de LowDB (por defecto)
DATABASE_PATH="./database.json"

# ==========================================
# CONFIGURACIÓN DE NOTIFICACIONES EMAIL
# ==========================================

# Configuración SMTP para notificaciones por email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="WhatsApp Bot <your-email@gmail.com>"
SMTP_REPLY_TO=""

# Password reset / security alerts
# (Optional) Override where security alerts are sent; defaults to SMTP_USER when set
SECURITY_ALERT_EMAIL_TO=""
# Minutes the password reset link is valid
PASSWORD_RESET_EXPIRES_MINUTES=30

# Branding emails (opcional)
# Colores para que los correos combinen con el panel
EMAIL_BRAND_PRIMARY="#6366f1"
EMAIL_BRAND_SECONDARY="#7c3aed"
EMAIL_BRAND_BG="#0b1020"
EMAIL_BRAND_CARD="#111827"

# Email para recibir notificaciones
NOTIFICATION_EMAIL="admin@example.com"
ADMIN_EMAIL="admin@example.com"

# ==========================================
# CONFIGURACIÓN DE WHATSAPP
# ==========================================

# Configuración de Twilio (opcional para WhatsApp Business API)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="+14155238886"

# ==========================================
# CONFIGURACIÓN DE SEGURIDAD
# ==========================================

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de CORS
CORS_ORIGIN="http://localhost:3000,https://oguricap.ooguy.com,http://oguricap.ooguy.com"

# Configuración de JWT (si se usa)
JWT_SECRET="your-jwt-secret-key-here"
JWT_EXPIRES_IN="24h"

# ==========================================
# CONFIGURACIÓN DE SISTEMA
# ==========================================

# Configuración de backups
BACKUP_DIR="./backups"
BACKUP_MAX_SIZE=1073741824
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY="your-backup-encryption-key"

# Configuración de logs
LOG_LEVEL="info"
LOG_DIR="./logs"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5

# Configuración de plugins
PLUGIN_DIR="./plugins"
PLUGIN_MARKETPLACE_URL="https://api.whatsappbot.com/plugins"

# ==========================================
# CONFIGURACIÓN DE ALERTAS
# ==========================================

# Umbrales de alertas del sistema
ALERT_MEMORY_THRESHOLD=85
ALERT_CPU_THRESHOLD=90
ALERT_DISK_THRESHOLD=90
ALERT_ERROR_RATE_THRESHOLD=10

# ==========================================
# CONFIGURACIÓN DE WEBHOOKS
# ==========================================

# URLs de webhooks para notificaciones
WEBHOOK_URL_ALERTS="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
WEBHOOK_URL_NOTIFICATIONS="https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK"

# ==========================================
# CONFIGURACIÓN DE APIS EXTERNAS
# ==========================================

# API Keys para servicios externos
OPENAI_API_KEY="your-openai-api-key"
GOOGLE_API_KEY="your-google-api-key"
WEATHER_API_KEY="your-weather-api-key"

# ==========================================
# CONFIGURACIÓN DE DESARROLLO
# ==========================================

# Configuración para desarrollo
DEBUG=true
VERBOSE_LOGGING=false
ENABLE_HOT_RELOAD=true

# Configuración del frontend
PANEL_SERVE_FRONTEND=1
PANEL_FRONTEND_DIR="./frontend-next/dist"

# ==========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ==========================================

# Configuración para producción (descomenta en producción)
# NODE_ENV="production"
# DEBUG=false
# VERBOSE_LOGGING=false
# ENABLE_HOT_RELOAD=false

# Configuración de SSL (para HTTPS)
# SSL_CERT_PATH="/path/to/cert.pem"
# SSL_KEY_PATH="/path/to/key.pem"

# Configuración de proxy reverso
# TRUST_PROXY=true
# PROXY_COUNT=1

# ==========================================
# CONFIGURACIÓN DE MONITOREO
# ==========================================

# Configuración de métricas y monitoreo
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
SYSTEM_MONITORING_INTERVAL=60000

# Configuración de alertas por email
EMAIL_ALERTS_ENABLED=true
EMAIL_ALERT_COOLDOWN=300000

# ==========================================
# NOTAS IMPORTANTES
# ==========================================

# 1. Copia este archivo como .env y configura tus valores
# 2. NUNCA subas el archivo .env al repositorio
# 3. Usa contraseñas seguras y claves API válidas
# 4. Para Gmail, usa "App Passwords" en lugar de tu contraseña normal
# 5. Configura las variables según tu entorno (desarrollo/producción)
