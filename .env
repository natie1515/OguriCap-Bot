# Configuración del Bot para producción
# ======================
# CORE
# ======================
NODE_ENV=production
PORT=3001
SERVER_IP=0.0.0.0

# ======================
# FRONTEND
# ======================
NEXT_PUBLIC_API_URL=https://oguricap.ooguy.com

# ======================
# PANEL ADMIN
# ======================
PANEL_API_KEY=oguri-secret-key-2024
PANEL_ADMIN_USER=admin
PANEL_ADMIN_PASS=admin123
PANEL_ADMIN_ROLE=owner

# ======================
# DATABASE - POSTGRESQL ONLY
# ======================
# PostgreSQL Configuration (Local en el host, accedido desde Docker)
POSTGRES_HOST=172.17.0.1
POSTGRES_PORT=5432
POSTGRES_DB=oguribot
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=melodia
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# Database Settings
DATABASE_FALLBACK_ENABLED=false
DATABASE_AUTO_FALLBACK=false

# ======================
# LOGS
# ======================
LOG_LEVEL=info
LOG_FILE=./logs/bot.log

# ======================
# MEMORY
# ======================
MAX_OLD_SPACE_SIZE=1024
MEMORY_LIMIT=800

# ======================
# WHATSAPP
# ======================
WA_SESSION_PATH=./Sessions
WA_AUTO_RECONNECT=true
WA_MAX_RECONNECT_ATTEMPTS=5

# ======================
# MEDIA
# ======================
MEDIA_PATH=./storage/media
MAX_FILE_SIZE=10485760

# ======================
# SECURITY / CORS
# ======================
PANEL_CORS_ORIGIN=https://oguricap.ooguy.com
CORS_ORIGIN=https://oguricap.ooguy.com
SOCKET_IO_CORS_ORIGIN=https://oguricap.ooguy.com

# JWT Configuration
JWT_SECRET=oguri-jwt-secret-key-2024-super-secure
JWT_EXPIRY=24h

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# BACKUP & MONITORING
# ======================
# Backup Configuration
BACKUP_DIR=./database/backups
BACKUP_RETENTION_DAYS=30
BACKUP_MAX_SIZE=1073741824

# Monitoring Settings
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
SYSTEM_MONITORING_INTERVAL=60000

# ======================
# DOCKER & DEPLOYMENT
# ======================
# Docker PostgreSQL Service Name (for docker-compose)
POSTGRES_SERVICE_NAME=postgres
DOCKER_NETWORK=oguricap-network

# ======================
# DEVELOPMENT/DEBUG
# ======================
# Debug Settings (set to false in production)
DEBUG_DATABASE=false
VERBOSE_LOGGING=false
ENABLE_SQL_LOGGING=false

# ======================
# PERFORMANCE
# ======================
# Database Performance
DB_QUERY_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000

# Application Performance
CACHE_TTL=300000
MAX_CONCURRENT_OPERATIONS=10

# ======================
# NOTIFICATIONS
# ======================
# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=admin@oguricap.com

# ======================
# FEATURE FLAGS
# ======================
# Enable/Disable Features
ENABLE_POSTGRESQL=true

# Panel Features
PANEL_API=1
PANEL_SERVE_FRONTEND=1
PANEL_SSE_KEEPALIVE_MS=25000

# ======================
# PRODUCTION OVERRIDES
# ======================
# Production-specific settings
NO_PROMPT=1
TRUST_PROXY=true
PROXY_COUNT=1