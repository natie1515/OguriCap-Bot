{
  "name": "OguriCap-botMD",
  "version": "1.8.2",
  "description": "WhatsApp Bot Multi Device with Admin Panel",
  "main": "index.js",
  "type": "module",
  "directories": {
    "lib": "lib",
    "plugins": "plugins"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node --inspect index.js",
    "prod": "NODE_ENV=production node index.js",
    "prod:full": "npm run setup:panel && npm run start:production",
    "start:production": "concurrently \"npm run prod\" \"cd frontend-next && npm start\"",
    
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    
    "pm2:start:bot": "pm2 start ecosystem.config.cjs --only oguri-bot",
    "pm2:start:panel": "pm2 start ecosystem.config.cjs --only oguri-panel-next",
    
    "pm2:stop:bot": "pm2 stop oguri-bot",
    "pm2:stop:panel": "pm2 stop oguri-panel-next",
    
    "pm2:restart:bot": "pm2 restart oguri-bot",
    "pm2:restart:panel": "pm2 restart oguri-panel-next",
    
    "pm2:logs:bot": "pm2 logs oguri-bot",
    "pm2:logs:panel": "pm2 logs oguri-panel-next",
    
    "install:panel": "cd frontend-next && npm install",
    "build:panel": "cd frontend-next && npm run build",
    "setup:panel": "npm run install:panel && npm run build:panel",
    "start:panel": "cd frontend-next && npm start",
    "production": "npm run setup:panel && npm run start:panel",
    
    "clean": "rm -rf node_modules frontend-next/node_modules",
    "clean:logs": "rm -rf logs/* Sessions/*/logs/*",
    "backup": "tar -czf backup-$(date +%Y%m%d-%H%M%S).tar.gz --exclude=node_modules --exclude=.git .",
    "health": "node --version && npm --version && pm2 --version",
    "status": "pm2 status",
    "test": "echo 'No tests specified' && exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melodiabl/OguriCap-Bot.git"
  },
  "author": "melodiabl",
  "license": "MIT-License",
  "bugs": {
    "url": "https://github.com/melodiabl/OguriCap-Bot/issues"
  },
  "homepage": "https://github.com/melodiabl/OguriCap-Bot#readme",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@vitalets/google-translate-api": "^8.0.0",
    "@whiskeysockets/baileys": "github:gatanina-li/baileys",
    "acrcloud": "^1.4.0",
    "adm-zip": "^0.5.12",
    "aptoide-scraper": "github:DIEGO-OFC/dv-aptoide-scraper",
    "awesome-phonenumber": "^3.4.0",
    "axios": "^1.1.2",
    "cfonts": "^3.3.0",
    "chalk": "^5.1.0",
    "cheerio": "npm:cheerio@1.0.0-rc.12",
    "dotenv": "^17.2.3",
    "file-type": "^18.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "formdata-node": "^5.0.0",
    "google-libphonenumber": "3.2.38",
    "human-readable": "^0.2.1",
    "jimp": "^0.16.3",
    "lodash": "^4.17.21",
    "lowdb": "^3.0.0",
    "megajs": "^1.1.3",
    "mime-types": "^3.0.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.2.10",
    "node-webpmux": "^3.1.3",
    "performance-now": "^2.1.0",
    "pino": "^8.6.1",
    "qrcode": "^1.5.1",
    "qrcode-terminal": "^0.12.0",
    "socket.io": "^4.8.1",
    "syntax-error": "^1.4.0",
    "terminal-image": "^2.0.0",
    "url-regex-safe": "^3.0.0",
    "ws": "^8.18.3",
    "yargs": "^17.3.1",
    "yt-search": "^2.10.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^3.1.1",
    "node-cron": "^3.0.3",
    "sharp": "^0.34.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
