    "arm64"
  ],
  "keywords": [
    "whatsapp",
    "bot",
    "baileys",
    "multi-device",
    "nodejs",
    "javascript",
    "automation",
    "admin-panel"
  ],
  "config": {
    "memory_limit": "512",
    "max_old_space_size": "512"
  }
}
